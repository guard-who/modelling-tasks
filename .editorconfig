root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 175

[*.als]
indent_size = unset
max_line_length = 160

[*.hs]
indent_size = unset

[*.md]
indent_size = unset

[test/unit/**]
end_of_line = unset
insert_final_newline = unset
max_line_length = unset

[example/**]
max_line_length = unset

[**.{yml,yaml,md,tex,cabal}]
max_line_length = unset
